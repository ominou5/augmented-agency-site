---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title.includes('Augmentis') ? title : `Augmentis - ${title}`}</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
  </head>
  <body>
    <slot />
  </body>
</html>

<style is:global>
  :root {
    --primary: 147, 51, 234;
    --secondary: 52, 211, 153;
    --background: 17, 17, 17;
    --card-bg: 32, 32, 32;
    --text: 229, 229, 229;
    --primary-gradient: linear-gradient(135deg, rgb(var(--primary)), rgb(var(--secondary)));
    --hover-gradient: linear-gradient(135deg, rgb(var(--secondary)), rgb(var(--primary)));
  }
  
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  html {
    font-family: 'Inter', sans-serif;
    background: rgb(var(--background));
    color: rgb(var(--text));
    scroll-behavior: smooth;
    -webkit-tap-highlight-color: transparent;
  }

  body {
    min-height: 100vh;
    overflow-x: hidden;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1rem;
  }

  .gradient-text {
    background: var(--primary-gradient);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    white-space: nowrap;
  }

  .card {
    background: rgba(var(--card-bg), 0.8);
    backdrop-filter: blur(12px);
    border-radius: 1rem;
    border: 1px solid rgba(var(--primary), 0.1);
    transition: transform 0.3s ease;
  }

  .card:hover {
    transform: translateY(-5px);
  }

  .btn {
    background: var(--primary-gradient);
    color: white;
    padding: 0.8rem 1.5rem;
    border-radius: 0.5rem;
    border: none;
    font-weight: 500;
    cursor: pointer;
    transition: all 0.3s ease;
    text-decoration: none;
    display: inline-block;
    text-align: center;
  }

  .btn:hover {
    background: var(--hover-gradient);
    transform: translateY(-2px);
  }

  @media (max-width: 768px) {
    .container {
      padding: 0 1rem;
    }

    .btn {
      width: 100%;
      max-width: 300px;
      margin: 0 auto;
      padding: 1rem;
      font-size: 1rem;
    }
  }

  @media (max-width: 480px) {
    html {
      font-size: 14px;
    }
  }
</style>